<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:columnCount="5"
    tools:context=".MainActivity">
    <EditText
        android:id="@+id/num1"
        android:textSize="15sp"
        android:layout_columnSpan="5"
        android:layout_gravity="fill_horizontal"
        android:hint="첫번째 숫자"
        />
    <EditText
        android:id="@+id/num2"
        android:textSize="15sp"
        android:layout_gravity="fill_horizontal"
        android:layout_columnSpan="5"
        android:hint="두번째 숫자"
        />
    <Button
        android:id="@+id/B0"
        android:layout_width="0dp"
        android:textSize="15sp"
        android:layout_columnWeight="1"
        android:text="0"/>
    <Button
        android:id="@+id/B1"
        android:layout_width="0dp"
        android:textSize="15sp"
        android:layout_columnWeight="1"
        android:text="1"/>
    <Button
        android:id="@+id/B2"
        android:layout_width="0dp"
        android:textSize="15sp"
        android:layout_columnWeight="1"
        android:text="2"/>
    <Button
        android:id="@+id/B3"
        android:layout_width="0dp"
        android:textSize="15sp"
        android:layout_columnWeight="1"
        android:text="3" />

    <Button
        android:id="@+id/B4"
        android:layout_width="0dp"
        android:layout_columnWeight="1"
        android:text="4"
        android:textSize="15sp" />

    <Button
        android:id="@+id/B5"
        android:layout_width="0dp"
        android:layout_columnWeight="1"
        android:text="5"
        android:textSize="15sp" />

    <Button
        android:id="@+id/B6"
        android:layout_width="0dp"
        android:textSize="15sp"
        android:layout_columnWeight="1"
        android:text="6"/>
    <Button
        android:id="@+id/B7"
        android:layout_width="0dp"
        android:textSize="15sp"
        android:layout_columnWeight="1"
        android:text="7"/>
    <Button
        android:id="@+id/B8"
        android:layout_width="0dp"
        android:textSize="15sp"
        android:layout_columnWeight="1"
        android:text="8"/>
    <Button
        android:id="@+id/B9"
        android:layout_width="0dp"
        android:textSize="15sp"
        android:layout_columnWeight="1"
        android:text="9"/>


    <Button
        android:id="@+id/add"
        android:textSize="15sp"
        android:layout_columnSpan="5"
        android:layout_gravity="fill_horizontal"
        android:text="@string/add"
        android:textColor="@color/black"
        app:backgroundTint="#7EB3B3"></Button>

    <Button
        android:id="@+id/sub"
        android:textSize="15sp"
        android:layout_gravity="fill_horizontal"
        android:layout_columnSpan="5"
        android:text="@string/sub"
        android:textColor="@color/black"
        app:backgroundTint="#DCD6A6"></Button>

    <Button
        android:id="@+id/mul"
        android:textSize="15sp"
        android:layout_gravity="fill_horizontal"
        android:layout_columnSpan="5"
        android:text="@string/mul"
        android:textColor="@color/black"
        app:backgroundTint="#C2A7C6"></Button>

    <Button
        android:id="@+id/div"
        android:textSize="15sp"
        android:layout_gravity="fill_horizontal"
        android:layout_columnSpan="5"
        android:text="@string/div"
        android:textColor="@color/black"
        app:backgroundTint="#999EB6"></Button>

    <TextView
        android:id="@+id/result"
        android:layout_gravity="fill_horizontal"
        android:layout_columnSpan="5"
        android:text="결과: "
        android:textSize="30sp"></TextView>
</GridLayout>