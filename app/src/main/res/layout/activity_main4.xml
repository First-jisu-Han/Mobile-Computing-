<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/num1"
        android:hint="Num1"
        android:textSize="30sp"
        android:layout_weight="1"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/num2"
        android:hint="Num2"
        android:textSize="30sp"
        android:layout_weight="1"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/result"
        android:hint="Result"
        android:textSize="30sp"
        android:layout_weight="1"/>
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="4"
        android:columnCount="4">
        <Button
            android:id="@+id/n7"
            android:layout_margin="5dp"
            android:text="7"/>
        <Button
            android:id="@+id/n8"
            android:layout_margin="5dp"
            android:text="8"/>
        <Button
            android:id="@+id/n9"
            android:layout_margin="5dp"
            android:text="9"/>
        <Button
            android:id="@+id/div"
            android:layout_margin="5dp"
            android:text="/"/>
        <Button
            android:id="@+id/n4"
            android:layout_margin="5dp"
            android:text="4"/>
        <Button
            android:id="@+id/n5"
            android:layout_margin="5dp"
            android:text="5"/>
        <Button
            android:id="@+id/n6"
            android:layout_margin="5dp"
            android:text="6"/>
        <Button
            android:id="@+id/mul"
            android:layout_margin="5dp"
            android:text="*"/>
        <Button
            android:id="@+id/n1"
            android:layout_margin="5dp"
            android:text="1"/>
        <Button
            android:id="@+id/n2"
            android:layout_margin="5dp"
            android:text="2"/>
        <Button
            android:id="@+id/n3"
            android:layout_margin="5dp"
            android:text="3"/>
        <Button
            android:id="@+id/minus"
            android:layout_margin="5dp"
            android:text="-"/>
        <Button
            android:id="@+id/n0"
            android:layout_margin="5dp"
            android:text="0"
            android:layout_columnSpan="2"
            android:layout_gravity="fill_horizontal"
            />
        <Button
            android:id="@+id/n."
            android:layout_margin="5dp"
            android:text="."/>
        <Button
            android:id="@+id/plus"
            android:layout_margin="5dp"
            android:text="+"/>

        <Button
            android:id="@+id/reset"
            android:layout_margin="5dp"
            android:text="reset"
            android:layout_gravity="fill_horizontal"
            android:layout_columnSpan="4"/>




    </GridLayout>

</LinearLayout>